# Project configuration for code editors
# @link https://EditorConfig.org

# top-most EditorConfig file
root = true

# Every file
[*]
charset = utf-8
max_line_length = off
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# Extension Overrides
[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[*.{html,twig}]
indent_size = 2

[*.{css,scss,sass}]
max_line_length = 80
indent_size = 2

[*.{js,ts}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.bat]
end_of_line = crlf
